#pragma once

// The numeric version format is AAAAABBBBBCCCCCDDDE where:
//
// AAAAA - major version number
// BBBBB - minor version number
// CCCCC - bugfix version number
// DDD   - alpha / beta (DDD + 500) version number
// E     - final (0) / snapshot (1)
//
// When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
//
// Version      AAAAABBBBBCCCCCDDDE
//
// 0.1.0        0000000001000000000
// 0.1.2        0000000001000020000
// 1.2.3        0000100002000030000
// 2.2.0-a.1    0000200001999990010
// 3.0.0-b.2    0000299999999995020
// 2.2.0-a.1.z  0000200001999990011
//
#define LIBIW4X_STEAM_VERSION       $libiw4x_steam.version.project_number$ULL
#define LIBIW4X_STEAM_VERSION_STR   "$libiw4x_steam.version.project$"
#define LIBIW4X_STEAM_VERSION_ID    "$libiw4x_steam.version.project_id$"
#define LIBIW4X_STEAM_VERSION_FULL  "$libiw4x_steam.version$"

#define LIBIW4X_STEAM_VERSION_MAJOR $libiw4x_steam.version.major$
#define LIBIW4X_STEAM_VERSION_MINOR $libiw4x_steam.version.minor$
#define LIBIW4X_STEAM_VERSION_PATCH $libiw4x_steam.version.patch$

#define LIBIW4X_STEAM_PRE_RELEASE   $libiw4x_steam.version.pre_release$

#define LIBIW4X_STEAM_SNAPSHOT_SN   $libiw4x_steam.version.snapshot_sn$ULL
#define LIBIW4X_STEAM_SNAPSHOT_ID   "$libiw4x_steam.version.snapshot_id$"
